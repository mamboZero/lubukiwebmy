<h2>Portfolios</h2>
<% @portfolios.each do |portfolio_item|%>
  <p><%= portfolio_item.title %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <p> <img src="<%=portfolio_item.main_image unless portfolio_item.main_image.nil? %>" /></p>
  <p> <img src="<%=portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>" /></p>
<% end %>